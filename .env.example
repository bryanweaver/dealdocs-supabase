# Environment variable template for dealdocs (Vue 3 + Supabase)
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
VITE_SUPABASE_SERVICE_KEY=your_supabase_service_key

# Address Validation (src/views/AddressValidation.vue)
VITE_SMARTY_EMBEDDED_KEY=
VITE_LOCAL_ADDRESS_VALIDATION=

# Anvil Templates (src/components/FillContract2.vue, FillContract.vue, SignContract.vue)
VITE_ANVIL_20_17_FORM_ID=
VITE_ANVIL_20_17_FORM_TITLE=
VITE_ANVIL_HOA_FORM_ID=
VITE_ANVIL_HOA_FORM_TITLE=
VITE_ANVIL_THIRD_PARTY_FORM_ID=
VITE_ANVIL_THIRD_PARTY_FORM_TITLE=
VITE_APPRAISAL_ADDENDUM_TEMPLATE_ID=
VITE_APPRAISAL_ADDENDUM_TEMPLATE_TITLE=

# Datafinity API (src/views/PropertyData.vue)
VITE_DATAFINITY_API_KEY=
VITE_DATAFINITY_API_URL=
VITE_LOCAL_PROPERTY_DATA=

# Financing Referral (src/config/TX/financeConfig.ts)
VITE_FINANCING_REFERRAL_URL=

# Storage Configuration (Supabase Storage)
VITE_STORAGE_BUCKET_CONTRACTS=contracts
VITE_STORAGE_BUCKET_SIGNATURES=signatures
VITE_STORAGE_BUCKET_ATTACHMENTS=attachments

# Edge Functions Configuration (for production)
VITE_FUNCTIONS_URL=your_supabase_functions_url

# Email Service Configuration (for Edge Functions)
EMAIL_SERVICE=resend
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=contracts@yourdomain.com
REPLY_TO_EMAIL=support@yourdomain.com

# Webhook Configuration
ANVIL_WEBHOOK_SECRET=your_webhook_secret
FRONTEND_URL=https://yourdomain.com

# Test Credentials (for BDD testing)
VITE_BDD_USER=test@example.com
VITE_BDD_PASS=testpassword

# Email Testing Mode (redirects all emails to test address)
# Frontend: Shows test mode banner on email page
VITE_SEND_TO_TEST_EMAIL=false
